{% extends 'base.html.twig' %}
{% block title %}
    Login - Media Manager
{% endblock %}
{% block body %}
    <div class="container row">
        <div class="form-wrapper columns large-6 medium-6 small-12 large-offset-3 medium-offset-3 small-offset-0">
            <form action="/login" method="post" class="login-form" id="login-form">
                <div class="form-title-wrapper">
                    <h1 class="form-title">Login</h1>
                </div>
                <div class="form-group row">
                    <div class="column large-12 medium-12 small-12">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="column large-12 medium-12 small-12">
                        <label for="username">Username
                            <input type="text" class="username form-control" id="username" name="_username" value="{{ last_username }}" />
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="column large-12 medium-12 small-12">
                        <label for="password">Password *
                            <input type="password" class="password form-control" id="password" name="_password" />
                        </label>
                    </div>
                </div>
            <hr />
            <div class="form-group row">
                <div class="column large-12 medium-12 small-12">
                    <input type="submit" class="submit form-button" id="submit" value="submit" name="submit" />
                </div>
            </div>
            </form>
        </div>
    </div>
{% endblock %}

