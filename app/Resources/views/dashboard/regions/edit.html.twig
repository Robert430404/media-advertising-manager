{% extends 'base.html.twig' %}
{% block title %}
    Regions - Media Manager
{% endblock %}
{% block body %}
    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <h1 class="content-title">Editing {{ organization.name }} Region: {{ region.name }}</h1>
                <div class="row">
                    <div class="columns large-12 medium-12 small-12">
                        <div class="current-regions">
                            <div class="form-wrapper">
                                <form action="/regions/update/{{ region.id }}" method="post" class="region-form" id="region-form">
                                    <label for="region-name">Region Name *
                                        <input type="text" class="form-control region-name"
                                               id="region-name" name="region_name" value="{{ region.name }}"/>
                                    </label>
                                    <input type="hidden" class="organization-id" id="organization-id"
                                           name="organization_id" value="{{ organization.id }}"/>
                                    <div class="form-group row">
                                        <div class="column large-12 medium-12 small-12">
                                            <input type="submit" class="submit form-button" id="submit" value="Update Region"
                                                   name="submit"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

