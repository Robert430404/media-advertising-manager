{% extends 'base.html.twig' %}
{% block title %}
    Programs - Media Manager
{% endblock %}
{% block body %}
    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <h1 class="content-title">Edit Worksheet: {{ worksheet.name }}</h1>
                <div class="row">
                    <div class="columns large-12 medium-12 small-12">
                        <div class="current-programs">
                            <div class="form-wrapper">
                                <form action="/campaigns/worksheets/{{ campaign.id }}/update/{{ worksheet.id }}" method="post"
                                      class="worksheet-form" id="worksheet-form">
                                    <div class="form-group row">
                                        <div class="columns large-6 medium-6 small-12">
                                            <label for="campaign_name">Worksheet Name *
                                                <input type="text" class="form-control worksheet-name"
                                                       id="worksheet-name" name="worksheet_name" value="{{ worksheet.name }}"/>
                                            </label>
                                        </div>
                                        <div class="columns large-6 medium-6 small-12">
                                            <label for="worksheet_spot_type">Select Spot Type *
                                                <select name="worksheet_spot_type" id="worksheet-spot-type">
                                                    <option value="">Select Spot Type</option>
                                                    {% for spot_type in spot_types %}
                                                        <option value="{{ spot_type.id }}"
                                                                {% if worksheet.spotTypeId == spot_type.id %}
                                                                    selected="selected"
                                                                {% endif %}>
                                                            {{ spot_type.name }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </label>
                                        </div>
                                    </div>
                                    <input type="hidden" name="worksheet_region" value="{{ campaign.regionId }}"/>
                                    <input type="hidden" name="worksheet_organization"
                                           value="{{ campaign.organizationId }}"/>
                                    <div class="form-group row">
                                        <div class="column large-12 medium-12 small-12">
                                            <input type="submit" class="submit form-button" id="submit"
                                                   value="Update Worksheet"
                                                   name="submit"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

