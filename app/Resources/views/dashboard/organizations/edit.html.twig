{% extends 'base.html.twig' %}
{% block title %}
    Edit Organization {{ organization.name }} - Media Manager
{% endblock %}
{% block body %}
    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <h1 class="content-title">Editing Organization: {{ organization.name }}</h1>
                <div class="row">
                    <div class="columns large-12 medium-12 small-12">
                        <div class="current-organizations">
                            <div class="form-wrapper">
                                <form action="/organizations/update/{{ organization.id }}" method="post" class="organization-form" id="organization-form">
                                    <label for="organization-name">Organization Name *
                                        <input type="text" class="form-control organization-name"
                                               id="organization-name" name="organization_name" value="{{ organization.name }}" />
                                    </label>
                                    <div class="form-group row">
                                        <div class="column large-12 medium-12 small-12">
                                            <input type="submit" class="submit form-button" id="submit" value="Update Organization" name="submit" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

