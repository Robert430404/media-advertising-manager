{% extends 'base.html.twig' %}
{% block title %}
    Organizations - Media Manager
{% endblock %}
{% block body %}
    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <h1 class="content-title">Current Organizations</h1>
                <div class="row">
                    <div class="columns large-12 medium-12 small-12">
                        <div class="current-organizations">
                            {% if organizations is empty %}
                                <p>There are currently no organizations. Add a new one below.</p>
                            {% else %}
                                <ul>
                                    {% for organization in organizations %}
                                        <li>
                                            <span class="organization-name">{{ organization.name }}</span>
                                            <a class="action" href="/regions/{{ organization.id }}">Edit Regions</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                            <div class="form-wrapper">
                                <form action="/organizations/add" method="post" class="organization-form" id="organization-form">
                                    <label for="organization-name">Organization Name *
                                        <input type="text" class="form-control organization-name"
                                               id="organization-name" name="organization_name" />
                                    </label>
                                    <div class="form-group row">
                                        <div class="column large-12 medium-12 small-12">
                                            <input type="submit" class="submit form-button" id="submit" value="Add New Organization" name="submit" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

