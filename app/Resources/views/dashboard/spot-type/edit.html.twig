{% extends 'base.html.twig' %}
{% block title %}
    Spot Types - Media Manager
{% endblock %}
{% block body %}
    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <h1 class="content-title">Editing Spot Type: {{ type.name }}</h1>
                <div class="row">
                    <div class="columns large-12 medium-12 small-12">
                        <div class="current-spot-types">
                            <div class="form-wrapper">
                                <form action="/spot-types/update/{{ type.id }}" method="post" class="spot-type-form"
                                      id="spot-type-form">
                                    <label for="spot_type_name">Spot Type Name *
                                        <input type="text" class="form-control spot-type-name"
                                               id="spot-type-name" name="spot_type_name" value="{{ type.name }}"/>
                                    </label>
                                    <div class="form-group row">
                                        <div class="column large-12 medium-12 small-12">
                                            <input type="submit" class="submit form-button" id="submit" value="Update Spot Type"
                                                   name="submit"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

