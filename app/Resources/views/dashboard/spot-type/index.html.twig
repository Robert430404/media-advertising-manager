{% extends 'base.html.twig' %}

{% block body %}
    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <div class="row">
                    <div class="columns large-6 medium-6 small-12">
                        <div class="current-buy-types">
                            {% if types is empty %}
                                <p>There are currently no spot types. Add a new one below.</p>
                            {% else %}
                                <ul>
                                    {% for type in types %}
                                        <li>{{ type.name }}</li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                            <div class="form-wrapper">
                                <form action="/spot-type/add" method="post" class="spot-type-form"
                                      id="spot-type-form">
                                    <label for="spot_type_name">Spot Types *
                                        <input type="text" class="form-control spot-type-name"
                                               id="spot-type-name" name="spot_type_name"/>
                                    </label>
                                    <div class="form-group row">
                                        <div class="column large-12 medium-12 small-12">
                                            <input type="submit" class="submit form-button" id="submit" value="submit"
                                                   name="submit"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

