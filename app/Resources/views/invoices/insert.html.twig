{% extends 'base.html.twig' %}
{% block title %}
    Invoices - Media Manager
{% endblock %}
{% block body %}

    <div class="container row">
        <div class="columns large-12 medium-12 small-12">
            <div class="primary-content">
                <h1 class="content-title">Invoice: <strong>{{ attribute(files, 'invoices-1').getClientOriginalName }}</strong></h1>
                <h2 class="sub-title">
                    Organization: <strong>{{ organization.name }}</strong> //
                    Campaign: <strong>{{ campaign.name }}</strong> //
                    Region: <strong>{{ region.name }}</strong>
                </h2>
                <div class="breakdown-wrapper row">
                    <div class="columns large-12 medium-12 small-12">
                        {% for spot in spots  %}
                            {% for row in spot %}
                                {% if row.typeId == 41 %}
                                    <div>{{ row.totalSpots }}</div>
                                    <div class="row">
                                        <div class="columns large-2 medium-2 small-12">
                                            Date Ran
                                        </div>
                                        <div class="columns large-2 medium-2 small-12">
                                            Day Ran
                                        </div>
                                        <div class="columns large-2 medium-3 small-12">
                                            Time Ran
                                        </div>
                                        <div class="columns large-2 medium-3 small-12">
                                            Spot Length
                                        </div>
                                        <div class="columns large-3 medium-3 small-12">
                                            Spot Name
                                        </div>
                                        <div class="columns large-1 medium-1 small-12">
                                            Valid
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="row">
                                        <div class="columns large-2 medium-2 small-12">
                                            {{ row.dateRan.format("M d, Y") }}
                                        </div>
                                        <div class="columns large-2 medium-2 small-12">
                                            {{ row.dateRan.format("D") }}
                                        </div>
                                        <div class="columns large-2 medium-3 small-12">
                                            {{ row.timeRan.format("H:i") }}
                                        </div>
                                        <div class="columns large-2 medium-3 small-12">
                                            {{ row.spotLength }}
                                        </div>
                                        <div class="columns large-3 medium-3 small-12">
                                            {{ row.spotName }}
                                        </div>
                                        <div class="columns large-1 medium-1 small-12">
                                            <i class="fa fa-check"></i>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

